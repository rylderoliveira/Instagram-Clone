<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/image_view_post_profile_placeholder"
        android:layout_width="@dimen/width_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_post_owner_placeholder"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintBottom_toBottomOf="@+id/image_view_post_profile_placeholder"
        app:layout_constraintStart_toEndOf="@+id/image_view_post_profile_placeholder"
        app:layout_constraintTop_toTopOf="@+id/image_view_post_profile_placeholder" />

    <ImageView
        android:id="@+id/image_view_post_content_placeholder"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:src="@drawable/ic_placehholder_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_post_profile_placeholder"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/image_button_like_placeholder"
        android:layout_width="@dimen/width_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_post_content_placeholder" />

    <TextView
        android:id="@+id/image_button_comments_placeholder"
        android:layout_width="@dimen/width_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintStart_toEndOf="@id/image_button_like_placeholder"
        app:layout_constraintTop_toBottomOf="@id/image_view_post_content_placeholder" />

    <TextView
        android:id="@+id/image_button_send_placeholder"
        android:layout_width="@dimen/width_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintStart_toEndOf="@id/image_button_comments_placeholder"
        app:layout_constraintTop_toBottomOf="@id/image_view_post_content_placeholder" />

    <TextView
        android:id="@+id/image_button_save_placeholder"
        android:layout_width="@dimen/width_small"
        android:layout_height="@dimen/height_small"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_view_post_content_placeholder" />

    <TextView
        android:id="@+id/text_view_likes_count_placeholder"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_button_like_placeholder" />

    <TextView
        android:id="@+id/text_view_description_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_likes_count_placeholder" />

    <TextView
        android:id="@+id/text_view_show_all_comments_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_default_horizontal"
        android:layout_marginVertical="@dimen/margin_default_vertical"
        android:background="@color/gray_300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_description_placeholder" />

</androidx.constraintlayout.widget.ConstraintLayout>